<h4>Please make any necessary changes and press submit</h4>

<form action="/hogwarts/<%= @student.id %>" method = "post">
  <label for="first-name">First_name:</label>
  <input type="text" id = first-name name = first_name value = <%= @student.first_name %> > 

  <label for="last-name">Last_name:</label>
  <input type="text" id = last-name name = last_name value = <%= @student.last_name %>>

  <label for="age">Age:</label>
  <input type="number" id = age name = age value = <%= @student.age %>>

  <label for="house"></label>
  <select name="house" id=""house >Select House:
  
  <% @houses.each do |house| %>
  <option value="<%= house.id %>"><%= house.name %></option>
  <% end %>

  </select>
    
  <input type="submit" value = "Submit">
</form>